{
  "name": "abundant-crm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean:next": "rm -rf .next",
    "dev": "npm run clean:next && next dev",
    "dev:local": "bash scripts/dev-local.sh",
    "build": "npm run clean:next && next build",
    "start": "next start",
    "deploy:gcp": "bash scripts/deploy-gcp.sh",
    "lint": "eslint app components lib scripts --ext .js,.jsx,.ts,.tsx,.mjs",
    "check": "npm run lint && npm run build",
    "setup:local": "npm install && npm run db:sync",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:sync": "node scripts/db-sync.mjs",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test:db:smoke": "node scripts/test-db-smoke.mjs",
    "test:http:smoke": "node scripts/test-http-smoke.mjs",
    "test:smoke": "npm run test:db:smoke && npm run test:http:smoke",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "6.3.1",
    "next": "^15.1.7",
    "openai": "^4.85.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-quill-new": "^3.8.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.12",
    "prisma": "6.3.1",
    "typescript": "^5.7.3"
  }
}
